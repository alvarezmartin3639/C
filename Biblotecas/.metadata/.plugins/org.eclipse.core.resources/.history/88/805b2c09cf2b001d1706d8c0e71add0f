/*
 Ejercicios 4-4:
 A. Hacer el menú de un programa en el MAIN con las siguientes opciones:
 1. Loguearse
 2. Comprar
 3. Ver mis compras
 4. Vender
 5. Salir
 */

#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);
	int opcion = 0;
	int usuarioLogeado = 0;

	do {
		printf("\n1. Loguearse");
		printf("\n2. Comprar");
		printf("\n3. Ver mis compras");
		printf("\n4. Vender");
		printf("\n5. Salir");
		printf("\n\n Ingrese una opción: ");
		fflush(stdin);
		scanf("%d", &usuarioLogeado);

		if (opcion == 1 || usuarioLogeado == 1)
			switch (opcion) {
			case 1:
				usuarioLogeado = 1;

				break;
			case 2:

				break;

			case 3:
				break;

			case 4:
				break;
		}
		else
		printf("\nDebe logearse antes de realizar otra acción!.");


	} while (opcion != 5);

	return EXIT_SUCCESS;
}
