#include <stdio.h>
#include <stdlib.h>
#include "ordenamiento.h"
#define TAMEMPLEADOS 15
/*
Ejercicio 6-3: Realizar un programa que permita el ingreso de datos de 15 empleados
legajo (coincidente con el Ã­ndice), edad, salario, sexo (1-Femenino, 2-Masculino, 3-No
binario). Realizar carga secuencial. Calcular el sueldo promedio. Listar a los
empleados no binarios.
 */
int main(void) {
	int edad;
	float salario;
	int sexo;

	for(int i =0;i<TAMEMPLEADOS;i++){

		do{
			printf("\nIngrese el salario: ");
			fflush(stdin);
			scanf(" %f", &salario);

			if(salario <1)
				printf("\n***Error,%2.f no es un salario valido",salario);
		}while(salario <1);

		do{
			printf("\nIngrese la edad: ");
			fflush(stdin);
			scanf(" %d", &edad);

			if(edad <18)
				printf("\n***Error,%2.f no es un salario valido",salario);
		}while(salario <18);


		do{
				printf("\n1-Femenino");
				printf("\n2-Masculino");
				printf("\n3-No binario");
				printf("\nIngrese el sexo: ");
				fflush(stdin);
				scanf(" %d", &sexo);

				if(edad <18)
					printf("\n***Error,%2.f no es un salario valido",salario);
			}while(salario <18);

		}

	}

	return EXIT_SUCCESS;
}
